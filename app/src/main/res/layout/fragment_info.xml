<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.InfoFragment">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="502dp"
        android:layout_height="464dp"
        android:rotation="188"
        android:rotationX="124"
        android:rotationY="-8"
        android:src="@drawable/circulo_azul" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="321dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="150dp"
        android:src="@drawable/imagen_fondo_azul" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="202dp"
        android:layout_height="206dp"
        android:layout_gravity="top|center"
        android:src="@drawable/idg_alfa" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="675dp"
        android:layout_height="634dp"
        android:layout_marginTop="500dp"
        android:rotationX="30"
        android:rotationY="17"
        android:src="@drawable/circulo_negro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical">


    <TextView
        android:id="@+id/tvVersionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/chakra_semi_bold"
        android:textSize="25dp"
        android:text="Version" />
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/purple_200"
        android:fontFamily="@font/chakra_semi_bold"
        android:textSize="15dp"
        android:text="V 1. 0 . 0" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDerechos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/chakra_semi_bold"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="Â© Todos los derechos reservados" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="114dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="cellphone.json" />
</FrameLayout>